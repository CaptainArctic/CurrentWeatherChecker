<Window x:Class="CurrentWeatherChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrentWeatherChecker"
        mc:Ignorable="d"
        Title="Weather Checker" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите название города на английском:" HorizontalAlignment="Center"/>
            <TextBox x:Name="CityTextBox" Width="300"/>
            <Button Content="Проверить погоду" Click="CheckWeatherButton_Click"/>
        </StackPanel>
        <TextBlock x:Name="WeatherResultTextBlock" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,100,0,0"/>
    </Grid>
</Window>
